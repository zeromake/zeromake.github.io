  "scripts": {
    "build:backend": "tsc -p tsconfig.build.json",
    "start:backend": "ts-node src/main.ts",
    "prestart:prod": "npm run build:backend",
    "start:prod": "node out/main.js",
    "deploy": "pm2 start ecosystem.config.js",
    "dev": "node server",
    "debug": "node --inspect server.js",
    "start": "cross-env NODE_ENV=production node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --hide-modules",
    "generate": "rimraf docs && cross-env NODE_ENV=production node server/generate.js",
    "static": "npm run build && npm run generate"
  },
