{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "node",
            "args": [
                "server.js"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^!>(\\w+): (\\S+)?:(\\d+),(\\d+)(?:~(?:(\\d+),)?(\\d+))?: (.*)$",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "endLine": 5,
                    "endColumn": 6,
                    "message": 7
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^!>watch",
                    "endsPattern": "^!>compiler"
                }
            }
        }
    ]
}
