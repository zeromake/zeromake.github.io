{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./out",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "~/*": ["./", "./*"]
    }
  },
  "exclude": ["node_modules"]
}
